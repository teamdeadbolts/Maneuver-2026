// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model MatchScouting {
  id              String   @id // Use the UUID generated by the frontend
  teamNumber      Int
  matchNumber     Int
  allianceColor   String
  scoutName       String
  eventKey        String
  matchKey        String
  timestamp       BigInt
  isCorrected     Boolean  @default(false)
  gameData        Json     // This stores your year-specific JSON
  
  @@index([teamNumber, eventKey])
}

model PitScouting {
  id              String   @id
  teamNumber      Int
  eventKey        String
  scoutName       String
  timestamp       BigInt

  robotPhoto      String?
  weight          Float?
  drivetrain      String?
  programmingLanguage String?
  notes           String?

  gameData        Json

  @@index([teamNumber, eventKey])
}